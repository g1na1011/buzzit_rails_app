<h2><%= @post.title %></h2>

<h4><%= link_to @post.url, fix_url(@post.url) %></h4>

<h4><%= @post.description %></h4>
<p><%= display_datetime(@post.created_at) %></p>

<%= render 'shared/errors', obj: @comment %>

<% if logged_in? %>
  <%= form_for [@post, @comment] do |f| %>
    <%= f.text_area :body %>
    <br/>
    <%= f.submit 'Create comment', class: "btn btn-primary" %>
  <% end %>
<% end %>  

<h5>Comments:</h5>

<div class="row-fluid">
  <% @post.reload.comments.each do |comment| %>
    <ul>
      <% if logged_in? %>
        <div class="span2 text-center">
          <div class="well">
            <li>
              <%= link_to vote_post_comment_path(@post, comment, vote: 'true'), method: 'post' do %>
                <i class="icon-arrow-up"></i>
              <% end %>
              <br/>
              <span class="text-center"><%= comment.total_votes %> votes</span>
              <br/>
              <%= link_to vote_post_comment_path(@post, comment, vote: 'false'), method: 'post' do %>
                <i class="icon-arrow-down"></i>
              <% end %>
            </li>
          </div>
        </div>
      <% end %>  
      <div class="span10">
        <div class="well">
          <li>
            <em>"<%= comment.body %>"</em>
            <br/><br/>
            by <%= comment.creator.username %> <%= display_datetime(comment.created_at) %>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
</div>